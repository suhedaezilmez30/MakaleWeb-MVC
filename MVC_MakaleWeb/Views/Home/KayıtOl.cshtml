@using MakaleEntities.Model
@model RegisterModel
@{
    ViewBag.Title = "KayıtOl";

}
<link href="~/Content/Login.css" rel="stylesheet" />
<link href="~/Content/Validation_css.css" rel="stylesheet" />
@using (Html.BeginForm())  //post işlemi yapılabilmesi için begin form içine aldık
{
    <hr />
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Ekranı </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false) @*modele yazdığımız hataları almak için yaptık *@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", PlaceHolder = "Kullanıcı Adı" })

                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", PlaceHolder = "Email" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", PlaceHolder = "Şifre", type = "password" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Sifre2, new { @class = "form-control", PlaceHolder = "Şifre tekrar", type = "password"
                   })

                    </div>

                    
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt OL </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
