
@{
    ViewBag.Title = "Hata Oluştu";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        @{ 
            Exception ex = null;
            if (TempData["hatalar"]!=null)
            {
                ex= TempData["hatalar"] as Exception;
            }
        }
        <h1><span class="glyphicon glyphicon-remove-circle"></span>Hata oluştu</h1>
        <p>
            Hata oluştu lütfen site yönetici ile iletişime geçiniz.
            <br /> <br />
            @if (ex!=null)
            {
              <strong>Hata Detay:</strong>@ex.Message
            }
            @MyHelper.LinkButton("/Home/Index", "btn", "danger", "", "", "AnaSayfa")
        </p>

    </div>
</div>

