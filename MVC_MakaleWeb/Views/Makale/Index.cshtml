@model IEnumerable<MakaleEntities.Makale>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Makaleler</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kategori.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Icerik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Taslak)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BegeniSayisi)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kategori.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Icerik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Taslak)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BegeniSayisi)
                    </td>
                    <td>

                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@

                        @MyHelper.LinkButton("/Makale/Edit/" + item.ID, "link", "success", "btn-xs", "edit", "")

                        @MyHelper.LinkButton("/Makale/Details/" + item.ID, "link", "warning", "btn-xs", "search", "")

                        @MyHelper.LinkButton("/Makale/Delete/" + item.ID, "link", "danger", "btn-xs", "trash", "")

                        <button class="btn btn-warning btn-xs" data-toggle="modal" data-target="#modal1" data-makaleid="@item.ID"><span class="glyphicon glyphicon-comment"></span></button>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@MyHelper.ModalPopup("modal1", "Yorumlar")
<script src="~/Scripts/CommentScripts.js"></script>